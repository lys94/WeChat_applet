/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.imgsise {
 width: 100%;
 height: 185px;
}
.title {
  padding-left: 0.75rem;
}
.title1 {
  font-size: 1.1rem;
  font-weight: 800;
}

.title2 {
  font-size: 0.8rem;
  color: #A3A3A3;
  font-weight: bold;
}
.consult{
  width: 100%;
  height: 3.5rem;
  background-color: #A3A3A3;
  border: 0px solid;
  border-radius: 0.4rem;
  text-align: center;
}

.consult-test {
  display: block;
  color: #fff;
  font-size: 1.1rem;
  padding-top: 15rpx;
}
.title3 {
  display: block;
  text-align: center;
  font-size: 1.2rem;
  margin: 0.3rem 0;
  color: #A3A3A3;
}
.title3-red {
  color: red;
}
.triangle {
    width: 0;
    height: 0;
    border: 0.65rem solid transparent;
    border-top: 0.65rem solid #fff;
    margin-top: 0.5rem;
}
.int {
    width: 100%;
    height: 2.5rem;
    border: 1px solid #A3A3A3;
    border-radius: 0.5rem;
    margin-bottom: 0.35rem;
    font-size: 0.85rem;
    text-indent: 0.3rem;
}
.auth {
  flex: 1;
        height: 2.5rem;
        border: 1px solid #A3A3A3;
        border-radius: 0.5rem;
        margin-bottom: 0.35rem;
        font-size: 0.85rem;
        outline: none;
        text-indent: 0.3rem;
    }

.auth-span {
  flex: 1;
    vertical-align: top;
    height: 2.5rem;
    background-color: #A9D18F;
    border-radius: 0.9rem;
    text-align: center;
    font-size: 0.75rem;
    margin-left: 1.1rem;
    line-height: 2.45rem;
    color: #fff;
    border-width: 0rem;
}
.yzm {
  display: flex;
  display: -webkit-flex;
}
.hint {
  display: block;
  font-size: 0.8rem;
  color: #A3A3A3;
  padding: 0.5rem 0rem;
}
.successTest {
  display: block;
  font-size: 1rem;
  padding: 8px 0px 25px 0px;
}